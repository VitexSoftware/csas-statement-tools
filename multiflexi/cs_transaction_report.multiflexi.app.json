{
    "image": "",
    "name": "ÄŒSas transaction report",
    "description": "CSas transaction report",
    "executable": "csas-transaction-report",
    "setup": "",
    "cmdparams": "",
    "deploy": "apt install csas-statement-tools",
    "homepage": "https://github.com/VitexSoftware/csas-statement-tools",
    "requirements": [
        "Csas"
    ],
    "ociimage": "",
    "uuid": "d82ef26e-2bfc-4171-ad92-4eae643a5249",
    "topics": [
        "Bank",
        "Csas",
        "Transactions",
        "Check",
        "Json",
        "Report"
    ],
    "artifacts": [
        {
            "name": "Transaction report",
            "type": "file",
            "description": "Generated bank statements",
            "path": "^transaction_report_[A-Za-z0-9]+\\.json$"
        }
    ],
    "environment": {
        "CSAS_API_KEY": {
            "type": "text",
            "description": "API key for CSAS",
            "required": true
        },
        "CSAS_ACCESS_TOKEN": {
            "type": "text",
            "description": "Access token for CSAS",
            "required": true
        },
        "CSAS_ACCOUNT_IBAN": {
            "type": "text",
            "description": "IBAN of the CSAS account",
            "required": false
        },
        "CSAS_ACCOUNT_UUID": {
            "type": "text",
            "description": "UUID of the CSAS account",
            "required": false
        },
        "CSAS_SANDBOX_MODE": {
            "type": "bool",
            "description": "Enable sandbox mode for CSAS",
            "defval": false,
            "required": false
        },
        "CSAS_API_DEBUG": {
            "type": "bool",
            "description": "Enable API debug mode",
            "defval": false,
            "required": false
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": "Enable application debug mode",
            "defval": false,
            "required": false
        },
        "ACCOUNT_NUMBER": {
            "type": "text",
            "description": "Bank Account Number",
            "defval": "",
            "required": false
        },
        "ACCOUNT_CURRENCY": {
            "type": "text",
            "description": "for multicurrency accounts please specify one",
            "defval": "CZK",
            "required": false
        },
        "REPORT_SCOPE": {
            "type": "text",
            "description": "Time scope of transactions downloaded",
            "defval": "last_month",
            "required": false
        },
        "STATEMENT_FORMAT": {
            "type": "set",
            "description": "pdf or xml",
            "defval": "xml",
            "options": {
                "pdf": "PDF",
                "xml": "XML"
            },
            "required": false
        },
        "RESULT_FILE": {
            "type": "string",
            "description": "write output json data to",
            "defval": "transaction_report_{ACCOUNT_NUMBER}.json",
            "required": false
        },
        "ZABBIX_KEY": {
            "type": "string",
            "description": "Default name for Zabbix Item key name",
            "defval": "Raiff-Balance-{ACCOUNT_NUMBER}",
            "required": false
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": "write log messages using",
            "defval": "console|syslog",
            "required": false
        }
    },
    "multiflexi": "2.0.0"
}
