{
    "image": "",
    "name": "ÄŒSas statement mailer",
    "description": "Download Csas statements in given format and send it via email",
    "executable": "csas-statement-mailer",
    "setup": "",
    "cmdparams": "",
    "deploy": "apt install csas-statement-tools",
    "homepage": "https://github.com/VitexSoftware/csas-statement-tools",
    "requirements": [
        "Csas"
    ],
    "ociimage": "",
    "uuid": "bd700603-7a49-431c-8e30-97dbf1bddb41",
    "topics": [
        "Csas",
        "Mail",
        "Statements"
    ],
    "artifacts": [
        {
            "name": "Statements report",
            "type": "file",
            "description": "Generated bank statements",
            "path": "csas_statement_mailer.json"
        }
    ],
    "environment": {
        "CSAS_API_KEY": {
            "type": "text",
            "description": "API key for CSAS",
            "required": true
        },
        "CSAS_ACCESS_TOKEN": {
            "type": "text",
            "description": "Access token for CSAS",
            "required": true
        },
        "CSAS_ACCOUNT_IBAN": {
            "type": "text",
            "description": "IBAN of the CSAS account",
            "required": true
        },
        "CSAS_ACCOUNT_UUID": {
            "type": "text",
            "description": "UUID of the CSAS account",
            "required": true
        },
        "CSAS_SANDBOX_MODE": {
            "type": "bool",
            "description": "Enable sandbox mode for CSAS",
            "defval": false,
            "required": false
        },
        "CSAS_API_DEBUG": {
            "type": "bool",
            "description": "Enable API debug mode",
            "defval": false,
            "required": false
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": "Enable application debug mode",
            "defval": false,
            "required": false
        },
        "IMPORT_SCOPE": {
            "type": "text",
            "description": "Time scope of transactions downloaded",
            "defval": "auto",
            "required": false
        },
        "STATEMENTS_DIR": {
            "type": "text",
            "description": "Directory to save statements",
            "defval": ".",
            "required": false
        },
        "STATEMENT_FORMAT": {
            "type": "select",
            "description": "pdf or xml",
            "defval": "pdf",
            "options": {
                "pdf": "PDF",
                "xml": "XML",
                "xml-data": "XML Data",
                "abo-standard": "ABO Standard",
                "abo-internal": "ABO Internal",
                "abo-standard-extended": "ABO Standard Extended",
                "abo-internal-extended": "ABO Internal Extended",
                "csv-comma": "CSV Comma",
                "csv-semicolon": "CSV Semicolon",
                "mt940": "MT940"
            },
            "required": false
        },
        "ACCOUNT_CURRENCY": {
            "type": "text",
            "description": "for multicurrency accounts please specify one",
            "defval": "CZK",
            "required": false
        },
        "RESULT_FILE": {
            "type": "string",
            "description": "write output json data to",
            "defval": "csas_statement_mailer.json",
            "required": false
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": "write log messages using",
            "defval": "console|syslog",
            "required": false
        },
        "STATEMENTS_TO": {
            "type": "email",
            "description": "Recipient's email address",
            "defval": "",
            "required": true
        },
        "STATEMENTS_FROM": {
            "type": "email",
            "description": "Sender's email address",
            "defval": "",
            "required": false
        },
        "STATEMENTS_REPLYTO": {
            "type": "email",
            "description": "Reply-To email address",
            "defval": "",
            "required": false
        },
        "STATEMENTS_CC": {
            "type": "email",
            "description": "CC email address",
            "defval": "",
            "required": false
        },
        "CSAS_GENERATE_EMPTY_STATEMENTS": {
            "type": "bool",
            "description": "Generate and mail mock statements when no transactions are available for the period",
            "defval": false,
            "required": false
        }
    },
    "multiflexi": "2.0.0"
}