{
    "image": "",
    "name": "ÄŒSas statement downloader",
    "description": "Download Csas statements in given format",
    "executable": "csas-statement-downloader",
    "setup": "",
    "cmdparams": "",
    "deploy": "apt install csas-statement-tools",
    "homepage": "https://github.com/VitexSoftware/csas-statement-tools",
    "requirements": [
        "Csas"
    ],
    "ociimage": "",
    "topics": [
        "Csas",
        "Statements",
        "Downloader"
    ],
    "artifacts": [
        {
            "name": "Output JSON report",
            "type": "file",
            "path": "csas_statement_downloader.json",
            "description": "Output JSON data file"
        },
        {
            "name": "Statements Directory",
            "type": "directory",
            "path": ".",
            "description": "Directory to save statements"
        }
    ],
    "uuid": "589dfb07-eb27-450e-95c6-3e8edfd1e7d2",
    "environment": {
        "CSAS_API_KEY": {
            "type": "text",
            "description": "API key for CSAS",
            "required": true
        },
        "CSAS_ACCESS_TOKEN": {
            "type": "text",
            "description": "Access token for CSAS",
            "required": true
        },
        "CSAS_ACCOUNT_IBAN": {
            "type": "text",
            "description": "IBAN of the CSAS account",
            "required": true
        },
        "CSAS_ACCOUNT_UUID": {
            "type": "text",
            "description": "UUID of the CSAS account",
            "required": true
        },
        "CSAS_SANDBOX_MODE": {
            "type": "bool",
            "description": "Enable sandbox mode for CSAS",
            "defval": false,
            "required": false
        },
        "CSAS_API_DEBUG": {
            "type": "bool",
            "description": "Enable API debug mode",
            "defval": false,
            "required": false
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": "Enable application debug mode",
            "defval": false,
            "required": false
        },
        "IMPORT_SCOPE": {
            "type": "text",
            "description": "Time scope of transactions downloaded",
            "defval": "auto",
            "required": false
        },
        "STATEMENTS_DIR": {
            "type": "text",
            "description": "Directory to save statements",
            "defval": ".",
            "required": false
        },
        "STATEMENT_FORMAT": {
            "type": "select",
            "description": "pdf or xml",
            "defval": "pdf",
            "options": {
                "pdf": "PDF",
                "xml": "XML",
                "xml-data": "XML Data",
                "abo-standard": "ABO Standard",
                "abo-internal": "ABO Internal",
                "abo-standard-extended": "ABO Standard Extended",
                "abo-internal-extended": "ABO Internal Extended",
                "csv-comma": "CSV Comma",
                "csv-semicolon": "CSV Semicolon",
                "mt940": "MT940"
            },
            "required": false
        },
        "ACCOUNT_CURRENCY": {
            "type": "text",
            "description": "for multicurrency accounts please specify one",
            "defval": "CZK",
            "required": false
        },
        "RESULT_FILE": {
            "type": "string",
            "description": "write output json data to",
            "defval": "csas_statement_downloader.json",
            "required": false
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": "write log messages using",
            "defval": "console|syslog",
            "required": false
        }
    },
    "multiflexi": "2.0.0"
}