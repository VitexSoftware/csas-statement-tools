#!/usr/bin/make -f
# You must remove unused comment lines for the released package.
#export DH_VERBOSE = 1
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@

override_dh_install:
	dh_install
	sed -i -e 's/..\/vendor/\/var\/lib\/composer\/csas-statement-tools/g'   debian/csas-statement-tools/usr/lib/csas-statement-tools/*.php
	sed -i -e 's/\.\.\/.env//g'  debian/csas-statement-tools/usr/lib/csas-statement-tools/*.php
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//'`'"'  debian/conf/composer.json |sponge debian/csas-statement-tools/usr/lib/csas-statement-tools/composer.json
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//'`'"'  multiflexi/rb_balance.multiflexi.app.json |sponge debian/multiflexi-csas-statement-tools/usr/lib/csas-statement-tools/multiflexi/rb_balance.multiflexi.app.json
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//'`'"'  multiflexi/rb_statement_downloader.multiflexi.app.json |sponge debian/multiflexi-csas-statement-tools/usr/lib/csas-statement-tools/multiflexi/rb_statement_downloader.multiflexi.app.json
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//'`'"'  multiflexi/rb_statement_mailer.multiflexi.app.json |sponge debian/multiflexi-csas-statement-tools/usr/lib/csas-statement-tools/multiflexi/rb_statement_mailer.multiflexi.app.json
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//'`'"'  multiflexi/rb_transaction_report.multiflexi.app.json |sponge debian/multiflexi-csas-statement-tools/usr/lib/csas-statement-tools/multiflexi/rb_transaction_report.multiflexi.app.json
